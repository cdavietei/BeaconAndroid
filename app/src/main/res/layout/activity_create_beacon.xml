<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="project.topka.beacon.CreateBeacon">

    <EditText
        android:id="@+id/beacon_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Beacon Name"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/beacon_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/beacon_long_coord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/beacon_lat_coord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:inputType="text"
        />

    <!--<EditText-->
        <!--android:id="@+id/beacon_location"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Location"-->
        <!--android:inputType="textPostalAddress"/>-->

    <EditText
        android:id="@+id/beacon_time_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Time Start"
        android:inputType="time"
        />

    <EditText
        android:id="@+id/beacon_time_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Time End"
        android:inputType="time"
        />

    <EditText
        android:id="@+id/beacon_interests"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tags(separated by comma)"
        android:inputType="text"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create New Beacon"
        android:onClick="sendBeacon"
        />



</LinearLayout>
